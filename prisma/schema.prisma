generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL=file:./bancodados.sqlite")
}

model Produto {
  id Int @id @default(autoincrement())
  nome String
  lote String @unique
  validade String
  estoque Estoque[]
  produto Fornecedor[]
}

model Estoque {
  id Int @id @default(autoincrement())
  nome String
  quantidade Int
  categoria String
  produtoId Int
  produto Produto @relation(fields: [produtoId], references: [id])
}

model Fornecedor {
  id Int @id @default(autoincrement())
  nome String
  telefone Float
  email String
  quantidade Int
  produtoId Int
  produto Produto @relation(fields: [produtoId], references: [id])
}